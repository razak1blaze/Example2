<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
<bean id="ad1" class="AdressBean">  
<property name="flatno" value="103"></property> 
<property name="city" value="hyd"></property>
<property name="pin" value="500028"></property> 
</bean>  

<bean id="s1" class="StudentBean">  
<property name="rollno" value="501"></property> 
<property name="name" value="ram"></property>
<property name="ad" ref="ad1"></property> 
</bean> 
  
</beans> 